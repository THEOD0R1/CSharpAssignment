<UserControl x:Class="Presentation.WpfApp.Views.ProductListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             xmlns:models="clr-namespace:Infrastructure.Models;assembly=Infrastructure"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProductListViewModel}"
             
             Background="white"
             >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding PageTitle}" />
            <Button Grid.Column="1" Command="{Binding GoToAddProductCommand}" Content="ADD PRODUCT" Padding="10" />
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{Binding Products}" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:Product}">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="10 0" Grid.Column="0">
                            <TextBlock FontWeight="Bold" Text="Name: " />
                            <TextBlock Text="Id: " />
                            <TextBlock FontWeight="Bold" Text="Price: " />
                            <TextBlock Text="Category:" />
                            <TextBlock FontWeight="Bold" Text="Manufacturer: " />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock FontWeight="Bold" Text="{Binding Price}" />
                            <TextBlock Text="{Binding Category.CategoryName}" />
                            <TextBlock FontWeight="Bold" Text="{Binding Manufacture.ManufactureName}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="Edit" CommandParameter="{Binding .}" Command="{Binding DataContext.GoToEditProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            <Button Content="Delete" CommandParameter="{Binding Id}" Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
